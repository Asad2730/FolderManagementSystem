<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_vew="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <androidx.cardview.widget.CardView
        card_vew:cardCornerRadius="3dp"
        card_vew:cardElevation="5dp"
        card_vew:cardUseCompatPadding="false"
        android:layout_margin="7dp"
        android:layout_width="match_parent"
        android:layout_height="100dp">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:id="@+id/row_discipline_section"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Section"
                android:textAlignment="gravity"
                android:textStyle="bold"
                card_vew:layout_constraintBottom_toBottomOf="parent"
                card_vew:layout_constraintEnd_toEndOf="parent"
                card_vew:layout_constraintHorizontal_bias="0.228"
                card_vew:layout_constraintStart_toStartOf="parent"
                card_vew:layout_constraintTop_toTopOf="parent"
                card_vew:layout_constraintVertical_bias="0.633" />

            <TextView
                android:id="@+id/row_course_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Code"
                android:textSize="20sp"
                android:textStyle="bold"
                card_vew:layout_constraintBottom_toBottomOf="parent"
                card_vew:layout_constraintEnd_toEndOf="parent"
                card_vew:layout_constraintHorizontal_bias="0.23"
                card_vew:layout_constraintStart_toStartOf="parent"
                card_vew:layout_constraintTop_toTopOf="parent"
                card_vew:layout_constraintVertical_bias="0.111" />

            <TextView
                android:id="@+id/row_course_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name"
                android:textSize="13sp"
                android:textStyle="bold"
                card_vew:layout_constraintBottom_toBottomOf="parent"
                card_vew:layout_constraintEnd_toEndOf="parent"
                card_vew:layout_constraintHorizontal_bias="0.079"
                card_vew:layout_constraintStart_toStartOf="parent"
                card_vew:layout_constraintTop_toTopOf="parent"
                card_vew:layout_constraintVertical_bias="0.222" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                card_vew:layout_constraintBottom_toBottomOf="parent"
                card_vew:layout_constraintEnd_toEndOf="parent"
                card_vew:layout_constraintHorizontal_bias="0.991"
                card_vew:layout_constraintStart_toStartOf="parent"
                card_vew:layout_constraintTop_toTopOf="parent"
                card_vew:layout_constraintVertical_bias="0.0"
                card_vew:srcCompat="@drawable/folder" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>



</LinearLayout>