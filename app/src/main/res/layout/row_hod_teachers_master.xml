<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_vew="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <androidx.cardview.widget.CardView
        card_vew:cardCornerRadius="3dp"
        card_vew:cardElevation="5dp"
        card_vew:cardUseCompatPadding="false"
        android:layout_margin="7dp"
        android:layout_width="match_parent"
        android:layout_height="100dp">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp">


            <TextView
                android:id="@+id/row_teacherName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name"
                android:textSize="16sp"
                android:textStyle="bold"
                card_vew:layout_constraintBottom_toBottomOf="parent"
                card_vew:layout_constraintEnd_toEndOf="parent"
                card_vew:layout_constraintHorizontal_bias="0.046"
                card_vew:layout_constraintStart_toStartOf="parent"
                card_vew:layout_constraintTop_toTopOf="parent"
                card_vew:layout_constraintVertical_bias="0.253" />

            <TextView
                android:id="@+id/row_master"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Assign Master"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#0000FF"
                card_vew:layout_constraintBottom_toBottomOf="parent"
                card_vew:layout_constraintEnd_toEndOf="parent"
                card_vew:layout_constraintHorizontal_bias="0.902"
                card_vew:layout_constraintStart_toStartOf="parent"
                card_vew:layout_constraintTop_toTopOf="parent"
                card_vew:layout_constraintVertical_bias="0.774" />


            <TextView
                android:id="@+id/row_covered"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Covered"
                android:textColor="#0000FF"
                android:textSize="18sp"
                android:textStyle="bold"
                card_vew:layout_constraintBottom_toBottomOf="parent"
                card_vew:layout_constraintEnd_toEndOf="parent"
                card_vew:layout_constraintStart_toStartOf="parent"
                card_vew:layout_constraintTop_toTopOf="parent"
                card_vew:layout_constraintVertical_bias="0.757" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>



</LinearLayout>